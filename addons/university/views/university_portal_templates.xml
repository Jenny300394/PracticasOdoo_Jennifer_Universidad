<odoo>
    <template id="portal_my_home_menu_grades" inherit_id="portal.portal_my_home" priority="30">
        <xpath expr="//div[hasclass('o_portal_docs')]" position="inside">
            <t t-if="grade_count" t-call="portal.portal_docs_entry">
                <t t-set="title">Grades</t>
                <t t-set="url" t-value="'/my/grades'"/>
                <t t-set="placeholder_count" t-value="'grade_count'"/>
            </t>
        </xpath>
    </template>

    <template id="portal_my_grades_list" name="My Grades">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>
            
            <div class="container mt-3">
                <h3 class="mb-4">Academic Grades History</h3>
                
                <table class="table table-hover bg-white o_portal_my_doc_table">
                    <thead>
                        <tr class="active">
                            <th>Subject</th>
                            <th>Professor</th>
                            <th>Date</th>
                            <th class="text-center">Grade</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="grades" t-as="g">
                            <tr>
                                <td>
                                    <span t-if="g.enrollment_id" t-field="g.enrollment_id.subject_id.name"/>
                                </td>
                                <td>
                                    <span t-if="g.enrollment_id" t-field="g.enrollment_id.professor_id.name"/>
                                </td>
                                <td>
                                    <span t-field="g.create_date" t-options='{"widget": "date"}'/>
                                </td>
                                <td class="text-center">
                                    <span t-attf-class="badge rounded-pill #{'text-bg-success' if g.grade >= 5 else 'text-bg-danger'}" 
                                          t-field="g.grade"/>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>
</odoo>